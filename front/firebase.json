{
  "hosting": {
    "public": "yarn install && yarn start",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "yarn build"
    ]
  }
}
